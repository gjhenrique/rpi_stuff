---
services:
  nextcloud:
    image: lscr.io/linuxserver/nextcloud:26.0.0
    environment:
      PUID: 1000
      PGID: 1000
      TZ: "Europe/Berlin"
    volumes:
      - /home/{{ nextcloud_user }}/config:/config
      - /home/{{ nextcloud_user }}/data:/data
      - /home/{{ nextcloud_user }}/defaults/config.php:/defaults/config.php
    ports:
      - 127.0.0.1:8081:80
    restart: unless-stopped
