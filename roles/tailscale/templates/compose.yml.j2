---
services:
  tailscale:
    image: docker.io/tailscale/tailscale:v1.54.1
    network_mode: host
    cap_add:
      - NET_ADMIN
      - NET_RAW
    volumes:
      - /home/tailscale/state:/var/lib/tailscale
      - /dev/net/tun:/dev/net/tun
    environment:
      - TS_AUTHKEY={{ tailscale_auth_key }}
      - TS_STATE_DIR=/var/lib/tailscale
