---
services:
  jellyfin:
    image: lscr.io/linuxserver/jellyfin:version-10.8.9-1
    environment:
      PUID: 1000
      PGID: 1000
      TZ: "Europe/Berlin"
    volumes:
      - /home/{{ jellyfin_user }}/jellyfin:/config
      - /home/{{ jellyfin_user }}/media:/media
    ports:
      - 8096:8096
      - 8920:8920
      - 7359:7359/udp
      - 1900:1900/udp
    restart: unless-stopped
