{
  "packages": [
    "ansible-lint@24.9.2",
    "ansible@2.17.6",
    "git-crypt@0.7.0"
  ],
  "shell": {
    "scripts": {
      "play": "cd app && ansible-playbook --tags=$1 site.yml",
      "play-all": "cd app && ansible-playbook site.yml",
      "encrypt": "cd app && ansible-vault encrypt secrets.yml",
      "decrypt": "cd app && ansible-vault decrypt secrets.yml",
    }
  }
}
